# ─────────────────────────────────────────────────────────────
# Server Configuration
# ─────────────────────────────────────────────────────────────

# The port your Express server runs on
PORT=3000

# The base URL of your app (used in emails or redirects)
BASE_URL=http://localhost:3000


# ─────────────────────────────────────────────────────────────
# Database Configuration
# ─────────────────────────────────────────────────────────────

# MongoDB connection string
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority


# ─────────────────────────────────────────────────────────────
# Authentication / JWT Secrets
# ─────────────────────────────────────────────────────────────

# Secret keys used to sign JWTs
ACCESS_TOKEN_SECRET=your-access-token-secret
REFRESH_TOKEN_SECRET=your-refresh-token-secret
EMAIL_TOKEN_SECRET=your-email-token-secret


# ─────────────────────────────────────────────────────────────
# Email Service Configuration (e.g., Nodemailer with Gmail/SMTP)
# ─────────────────────────────────────────────────────────────

# Email address used to send emails (e.g., for verification or reset password)
EMAIL=your-email@example.com

# Password or app password for the above email
EMAIL_PASS=your-email-password


# ─────────────────────────────────────────────────────────────
# Third-Party API Keys
# ─────────────────────────────────────────────────────────────

# OpenAI GPT API key (if using ChatGPT)
GPT_API_KEY=your-openai-api-key

# Google Gemini API key (if using Google's AI models)
GEMINI_API_KEY=your-google-gemini-api-key

# OpenWeather API key (for weather services)
OPEN_WEATHER_API_KEY=your-open-weather-api-key